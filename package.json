{
    "name": "@smartpy/sdk",
    "version": "0.0.1",
    "description": "SmartTS SDK",
    "keywords": [
        "Tezos",
        "SmartTS",
        "Smart Contract"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "node scripts/build.js && tsc --build",
        "test": "jest --runInBand --detectOpenHandles",
        "ci-test": "CI=true jest --collect-coverage --reporters=default --reporters=jest-junit --reporters=jest-html-reporter",
        "prettier:fix": "prettier --write '{src,tests}/**/*.{js,ts,json}'",
        "lint:fix": "eslint '{src,tests}/**/*.{js,ts,json}' --quiet --fix"
    },
    "dependencies": {
        "@smartpy/smartml": "^0.8.5-2"
    },
    "devDependencies": {
        "@types/node": "16.11.10",
        "@types/jest": "27.0.3",
        "@typescript-eslint/eslint-plugin": "5.4.0",
        "@typescript-eslint/parser": "5.4.0",
        "coveralls": "3.1.1",
        "esbuild": "0.13.15",
        "eslint": "8.3.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "jest": "27.3.1",
        "jest-html-reporter": "3.4.1",
        "jest-junit": "13.0.0",
        "prettier": "2.4.1",
        "ts-jest": "27.0.7",
        "typescript": "4.5.2"
    },
    "jest-junit": {
        "suiteName": "jest tests",
        "outputDirectory": ".",
        "outputName": "coverage/junit.xml",
        "uniqueOutputName": "false",
        "classNameTemplate": "{classname} - {title}",
        "titleTemplate": "{classname} - {title}",
        "ancestorSeparator": " â€º ",
        "usePathForSuiteName": "true"
    },
    "jest-html-reporter": {
        "outputPath": "coverage/test-report.html"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run lint:fix"
        ]
    }
}
