{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es6",
		"lib": ["es6", "es7", "dom"],
		"pretty": true,
		"strict": true,
		"allowJs": true,
		"alwaysStrict": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "./dist",
		"emitDeclarationOnly": true,
	},
	"include": [
		"./src"
	],
	"exclude": [
		"./node_modules",
	],
	"typedocOptions": {
        "entryPoints": ["src/compiler/index.ts", "src/type/index.ts", "src/expression/index.ts", "src/statement/index.ts", "src/core/index.ts"],
        "out": "api_documentation"
    }
}
